		 "sizes": "96x96",
		 "type": "image/png",
		 "purpose": "maskable any"
		 },
		 {
		 "src": "/icons/X/icon-128x128.png",
		 "sizes": "128x128",
		 "type": "image/png",
		 "purpose": "maskable any"
		 },
		 {
		 "src": "/icons/X/icon-144x144.png",
		 "sizes": "144x144",
		 "type": "image/png",
		 "purpose": "maskable any"
		 },
		 {
		 "src": "/icons/X/icon-152x152.png",
